{
  "name": "test-app-starter",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://DDGG0531.github.io/test-ci/",

  "dependencies": {
    "@applitools/eyes.webdriverio": "^2.0.1",
    "bulma": "^0.7.2",
    "classnames": "^2.2.6",
    "codeceptjs": "^2.0.4",
    "lodash": "^4.17.11",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-loadable": "^5.5.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.3",
    "selenium-standalone": "^6.15.4",
    "webdriverio": "^4.14.1"
  },
  "scripts": {
    "lint": "if standard --fix | snazzy; then echo 'ðŸ’¯ Lint perfect'; else echo 'â‰ï¸ Lint get error please run `npm run lint` check again';exit 1; fi",
    "start": "react-scripts start",
    "eject": "react-scripts eject",
    "test": "if CI=true react-scripts test --coverage --env=jsdom; then echo 'âœ… Unit test run success'; else echo 'âŒ Unit test run failure'; exit 1; fi",
    "functional::local": "npm run start:selenium && codeceptjs run --steps --config=./codecept/local.config.js",
    "start:selenium": "selenium-standalone start > /dev/null 2>&1 &",
    "kill:selenium": "lsof -t -i :4444 | xargs kill",
    "build": "if react-scripts build; then echo 'ðŸ˜ Build success'; else echo 'ðŸ˜¨ Build failure'; exit 1; fi",
    "deploy::prod": "npm run build && if bash ./ghpage-deploy.sh; then echo 'ðŸ¤— Deploy success'; else echo 'ðŸ˜± Deploy failure'; exit 1; fi"
  },
  "standard": {
    "ignore": [
      "build/*",
      "registerServiceWorker.js"
    ],
    "env": {
      "browser": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "globals": [
      "actor",
      "Feature",
      "Scenario"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "node-sass": "^4.11.0",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/__tests__/**/*",
      "!src/__e2e__/**/*",
      "!src/(App|index|serviceWorker|setupTests).js"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ]
  }
}
